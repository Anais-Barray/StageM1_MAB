<tool id="hmmalign_id" name="Hmmalign" version="1.0.0">

    <description>Aligns reads on a HMM profile</description>
    
     <!-- hmmalign -o combo.sth - - mapali refseqaln.sth refseqaln.hmm read.fasta -->
	<command>
		/home/anaisb/software/hmmer/hmmer/src/hmmalign -o $output --mapali $input1 $input2 $input3
	</command>
	
	<inputs>
		<param name="input1" type="data" format="stockholm" label="Reference alignment in stockholm format"/>
		<param name="input2" type="data" format="hmm" label="Hmm profile"/>
		<param name="input3" type="data" format="fasta" label="Queries file (reads) in fasta format"/>
	</inputs>
	
	<outputs>
		<data name="output" format="stockholm" label="Hmmalign output file : combo.sth"/>
	</outputs>

	<help>
		Hmmalign aligns reads (fasta file) on a HMM profile (reference alignement built with hmmbuild tool). 
		Creates a .sth alignment file (stokholm format).
	</help>


</tool>
