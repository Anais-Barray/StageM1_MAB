<tool id="convbioseq_id" name="Convbioseq" version="1.0.0">

    <description>Converts sequence file format into another format</description>
    
	<command interpreter="python">
		./convbioseq_wrapper.py $input $input_format $output_format $output
	</command>
	
	<inputs>
		<param name="input"		 type="data" 	label="Sequence file to convert"/>
		<param name="input_format"		 type="select" 	label="Select format of the file to convert">
			<option value="phylip">		phylip		</option>
			<option value="stockholm">	stockholm	</option>
			<option value="fasta">		fasta		</option>
		</param>
		<param name="output_format"		 type="select" 	label="Select format to convert into">
			<option value="phylip">		phylip		</option>
			<option value="stockholm">	stockholm	</option>
			<option value="fasta">		fasta		</option>
		</param>
	</inputs>
	
	<outputs>
		<data name="output" label="Converted sequence file"/>
	</outputs>

	<help>
		Converts sequence file format into a selected format.
	</help>

</tool>

